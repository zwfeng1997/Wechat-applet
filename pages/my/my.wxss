/* pages/my/my.wxss */
.container{
    width: 100%;
    height: 100vh;
    background-color: #f2f2f2;
}
.user-info{
    padding-top: 60rpx;
    background-color: #fff;
}
.user-info .img{
    height: 180rpx;
    width: 180rpx;
    margin: 30rpx auto 40rpx;
    border-radius: 50%;
    box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
}
.user-info .img image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.user-info .user-name{
    display: block;
    padding: 30rpx 0;
    text-align: center;
}
.my-wallet{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx;
    margin-top: 40rpx;
    background-color: #fff;
}
.btn-login{
    width: 90%;
    position: absolute;
    bottom: 60rpx;
    left: 5%;
}